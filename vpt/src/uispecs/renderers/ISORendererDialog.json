// #package uispecs

// #section ISORendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 10,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Isovalue:",
      "children": [
        {
          "type": "slider",
          "bind": "isovalue",
          "value": 0.5,
          "min": 0,
          "max": 1,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Color:",
      "children": [
        {
          "type": "color-chooser",
          "bind": "color",
          "value": "#ddeeff"
        }
      ]
    },
    {
      "type": "field",
      "label": "Light direction:",
      "children": [
        {
          "type": "vector",
          "bind": "direction",
          "value": 1
        }
      ]
    }
  ]
}