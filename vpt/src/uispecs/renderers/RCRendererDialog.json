// #package uispecs

// #section RCRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 100,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Opacity:",
      "children": [
        {
          "type": "spinner",
          "bind": "opacity",
          "logarithmic": true,
          "value": 3,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Accumulate renders:",
      "children": [
        {
          "type": "checkbox",
          "bind": "accumulate",
          "checked": true
        }
      ]
    },
    {
      "type": "field",
      "label": "Gradient opacity:",
      "children": [
        {
          "type": "checkbox",
          "bind": "gradOpacity",
          "checked": true
        }
      ]
    },
    {
      "type": "field",
      "label": "Bidirectional shading:",
      "children": [
        {
          "type": "checkbox",
          "bind": "bidirShading",
          "checked": false
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Light",
      "children": [
        {
          "type": "field",
          "label": "Light type:",
          "children": [
            {
              "type": "dropdown",
              "bind": "lightType",
              "options": [
                {
                  "value": "uniform",
                  "label": "Uniform",
                  "selected": true
                },
                {
                  "value": "point",
                  "label": "Point"
                },
                {
                  "value": "directional",
                  "label": "Directional"
                }
              ]
            }
          ]
        },
        {
          "type": "field",
          "label": "Light intensity",
          "children": [
            {
              "type": "spinner",
              "bind": "lightIntensity",
              "logarithmic": true,
              "value": 1,
              "min": 0,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Light color:",
          "children": [
            {
            "type": "color-chooser",
            "bind": "lightColor",
            "value": "#ffffff"
            }
          ]
        },
        {
          "type": "panel",
          "bind": "lightTypeContainer"
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Reflection model",
      "children": [
        {
          "type": "field",
          "label": "Material type:",
          "children": [
            {
              "type": "dropdown",
              "bind": "matType",
              "options": [
                {
                  "value": "lambertian",
                  "label": "Lambertian",
                  "selected": true
                },
                {
                  "value": "phong",
                  "label": "Phong"
                },
                {
                  "value": "blinn",
                  "label": "Blinn-Phong"
                }
              ]
            }
          ]
        },
        {
          "type": "panel",
          "bind": "matTypeContainer"
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}
