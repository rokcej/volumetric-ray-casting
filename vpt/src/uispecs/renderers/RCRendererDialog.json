// #package uispecs

// #section RCRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 100,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Opacity:",
      "children": [
        {
          "type": "spinner",
          "bind": "opacity",
          "logarithmic": true,
          "value": 3,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Accumulate data:",
      "children": [
        {
          "type": "checkbox",
          "bind": "accumulate",
          "checked": true
        }
      ]
    },
    {
      "type": "field",
      "label": "Gradient opacity:",
      "children": [
        {
          "type": "checkbox",
          "bind": "gradOpacity",
          "checked": true
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Light",
      "children": [
        {
          "type": "field",
          "label": "Light type:",
          "children": [
            {
              "type": "dropdown",
              "bind": "lightType",
              "options": [
                {
                  "value": "uniform",
                  "label": "Uniform",
                  "selected": true
                },
                {
                  "value": "point",
                  "label": "Point"
                },
                {
                  "value": "directional",
                  "label": "Directional"
                }
              ]
            }
          ]
        },
        {
          "type": "panel",
          "bind": "lightTypeContainer"
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}