// #package uispecs

// #section RenderingContextDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Linear filter:",
      "children": [
        {
          "type": "checkbox",
          "bind": "filter",
          "checked": true
        }
      ]
    },
    {
      "type": "field",
      "label": "Resolution:",
      "children": [
        {
          "type": "spinner",
          "bind": "resolution",
          "min": 1,
          "max": 4096,
          "value": 512
        }
      ]
    },
    {
      "type": "field",
      "label": "Scale:",
      "children": [
        {
          "type": "vector",
          "bind": "scale",
          "value": 1,
          "step": 0.02
        }
      ]
    },
    {
      "type": "field",
      "label": "Translation:",
      "children": [
        {
          "type": "vector",
          "bind": "translation",
          "value": 0,
          "step": 0.1
        }
      ]
    }
  ]
}