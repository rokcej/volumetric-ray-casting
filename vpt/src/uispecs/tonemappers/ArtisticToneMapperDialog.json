// #package uispecs

// #section ArtisticToneMapperDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Low:",
      "children": [
        {
          "type": "spinner",
          "bind": "low",
          "logarithmic": true,
          "value": 0,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "High:",
      "children": [
        {
          "type": "spinner",
          "bind": "high",
          "logarithmic": true,
          "value": 1,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Midtones:",
      "children": [
        {
          "type": "slider",
          "bind": "midtones",
          "value": 0.5,
          "min": 0.00001,
          "max": 0.99999,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Saturation:",
      "children": [
        {
          "type": "spinner",
          "bind": "saturation",
          "logarithmic": true,
          "value": 1,
          "min": 0,
          "step": 0.02
        }
      ]
    }
  ]
}